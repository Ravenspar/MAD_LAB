<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"  xmlns:app="http://schemas.android.com/apk/res-auto"  xmlns:tools="http://schemas.android.com/tools"  android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="640dp"  android:text="COUNTER APPLICATION"  android:textAlignment="center"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"  app:layout_constraintEnd_toEndOf="parent"  android:id="@+id/textview1"/>
    <TextView
        android:id="@+id/textview2"
        android:layout_width="match_parent"  android:layout_height="wrap_content"  android:layout_alignParentEnd="true"  android:layout_alignParentBottom="true"  android:layout_marginEnd="119dp"
        android:layout_marginBottom="524dp"  android:text="Counter value"
        android:textAlignment="center"
        android:textSize="30dp" />
    <Button
        android:id="@+id/start_btn"
        android:layout_width="wrap_content"  android:layout_height="wrap_content"  android:layout_alignParentEnd="true"  android:layout_alignParentBottom="true"  android:layout_marginEnd="291dp"
        android:layout_marginBottom="230dp"  android:text="START" />
    <Button
        android:id="@+id/stop_btn"
        android:layout_width="wrap_content"  android:layout_height="wrap_content"  android:layout_alignParentEnd="true"  android:layout_alignParentBottom="true"  android:layout_marginEnd="85dp"
        android:layout_marginBottom="231dp"  android:text="STOP" />
</RelativeLayout>
